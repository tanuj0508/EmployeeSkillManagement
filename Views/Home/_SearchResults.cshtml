@model List<Employee>

@if (Model != null && Model.Count > 0)
{
    <table class="table" id="generate">
        <thead>
            <tr>
                <th>Sr.</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Designation</th>
                <th>Email</th>
                <th>Skill</th>
            </tr>
        </thead>
        <tbody>
            @{
                int index =1;
            }
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Designation</td>
                    <td>@employee.Email</td>
                    <td>@foreach(var employeeSkill in employee.EmployeeSkills){
                        <text>@employeeSkill.Skill.SkillName</text>
                        @if(employeeSkill != employee.EmployeeSkills.Last()){
                            <text>,</text>
                        }
                        }</td>
                </tr>
                index++;
            }
        </tbody>
    </table>
}
else
{
    <p>No results</p>
}
